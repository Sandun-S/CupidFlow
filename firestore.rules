rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Can read public profiles, can only write their own
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Profiles: Public read, Owner write
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Verification: Admin read only, User write (create only)
    match /verification_requests/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Transactions: User create, Admin manage
    match /transactions/{txnId} {
      allow create: if request.auth != null;
      allow read, write: if isAdmin();
    }
    
    // Matches & Swipes
    match /swipes/{swipId} {
        allow read, write: if request.auth != null;
    }
    // Matches: Only participants can read/write
    match /matches/{matchId} {
        allow read: if request.auth != null && (resource == null || request.auth.uid in resource.data.users);
        allow create: if request.auth != null; // Created by client-side logic
        allow update: if request.auth != null && request.auth.uid in resource.data.users;

        // Messages Subcollection
        match /messages/{messageId} {
            allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/matches/$(matchId)).data.users;
        }
    }
    
    // NIC Hashes (Public Read for Uniqueness Check, Authenticated Write)
    // NIC Hashes (Public Read for Uniqueness Check, Authenticated Write)
    match /nic_hashes/{hash} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Ideally check if hash matches content but simple for now
    }

    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
    }

    // Packages: Public Read, Admin Write
    match /packages/{packageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    // System Config
    match /system/{docId} {
      allow read: if true;
    }
  }
}
