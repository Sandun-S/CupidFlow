rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: Can read public profiles, can only write their own
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId; // Validation done in UI
    }

    // Profiles: Public read, Owner write
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Verification: Admin read only, User write (create only)
    match /verification_requests/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update, delete: if isAdmin();
    }

    // Transactions: User create, Admin manage
    match /transactions/{txnId} {
      allow create: if request.auth != null;
      allow read, write: if isAdmin();
    }
    
    // Matches & Swipes
    match /swipes/{swipId} {
        allow read, write: if request.auth != null;
    }
    match /matches/{matchId} {
        allow read, write: if request.auth != null; 
    }
  }
}
